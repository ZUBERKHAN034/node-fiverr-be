{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2020.string"],
    "target": "es2016",
    "skipLibCheck": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts", "src/secrets/*.json"],
  "exclude": ["src/test"]
}
